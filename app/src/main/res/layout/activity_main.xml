<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/screen"
        tools:context=".MainActivity">

    <Button
            android:text="Go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp" app:layout_constraintTop_toBottomOf="@+id/editText2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Enter Name"/>
    <Button
            android:text="Write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_write" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp"/>
    <Button
            android:text="Read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_read" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_write" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp"/>
    <Button
            android:text="Volley"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_volley" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_read" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp"/>
</android.support.constraint.ConstraintLayout>